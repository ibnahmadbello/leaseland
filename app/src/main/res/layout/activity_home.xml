<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="32sp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/biodata_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Click here to Fill Biodata" />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/lease_land_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lease Land"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">

    <Button
        android:id="@+id/guarantor_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Fill Guarantor info"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/rrrCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/rrrTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:textStyle="bold"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>